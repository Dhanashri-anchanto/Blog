<%= link_to 'Back To previous Page',  categories_path %><br/><br/>

<div class="categories show">
	<h2> Show Category </h2>


	<%= render :partial => @category %>

	<table border="2" cellpadding="10" cellspacing="0"  summary="Posts detail view">
		<tr>
			<th>Title</th>
			<td><font size="3" color="red"><%= (@category.title rescue "")%></font></td>
		</tr>
		<tr>
			<th>Created</th>
			<td><%= (@category.created_at rescue "")%></td>
		</tr>
		<tr>
			<th>Updated</th>
			<td><%= (@category.updated_at rescue "")%></td>
		</tr>
	</table>
</div>


<h2>Posts Under <font color="Blue"> <%= @temp.title %> </font> Category</h2>
<table border="2" cellpadding="10" cellspacing="0" class="listing" summary="Post list" border=2 id="t01">
	<tr class="header">
		<th>Post Title</th>
		<th>Created At</th>
		<th>Options</th>
	</tr>
	<tr>
		<% @post.order("id DESC").each do |post| %>
		<td>
		<%= truncate(post.title, length: 50) %>
  <%= link_to 'read more', category_post_path(post.category,post) %> </td>
		<td><%= post.created_at%></td>
		<td class="actions">
			<%= link_to("Show", category_post_path(post.category,post))%>

			<% if user_signed_in? %>
			<% if post.user.id == current_user.id %>
			|
			<%puts "=======#{post.category}"%>
			<%= link_to("Edit", edit_category_post_path(post.category,post))%>|
			<%= link_to "Remove", [post.category, post], method: :delete, data: { confirm: "Are you sure?" } %> </td>
		</td>
		<% end %>
		<% end %>
	</td>
</tr>
<% end %>
</table>
<br/><br/>
<td><%= link_to "Add new Post", new_category_post_path(@category) %></td>


