
<div align="right">
 <font size=3><%= link_to "Post", posts_path  %></font>
 <%= "|" %>
 <font size=3><%= link_to "Tag", tags_path  %></font>
 </div>

<div class="categories index">
 <h1>Listing Categories</h1>

<%= link_to("Add new Category", {:action => 'new'},:class => "action new") %><br/><br/>

<table border="2" cellpadding="10" cellspacing="0" class="listing" summary="Post list" border=2 id="t01">
<tr class="header">

<th>Title</th>

<th>Options</th>

</tr>
<% @categories.each do |category| %>
<tr>


<td>
<%= link_to("#{(category.title rescue '')}", {:action => 'topic', :id => (category.permalink rescue 'nil')})%></td>


<td class="actions">
<%= link_to("Show", {:action => 'show', :id => category.permalink }, :class => "action show")%>


<% if user_signed_in? %>
<% if category.user.id == current_user.id %>
<%= link_to("Edit", {:action => 'edit', :id => category.permalink }, :class => "action edit")%>


<%= link_to "Remove", category, method: :delete, data: { confirm: "Are you sure?" } %>
</td>
</tr>
<% end %>
<% end %>
<% end %>
</table>
</div>