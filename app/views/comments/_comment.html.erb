<%= div_for comment do %>

<p style = "border:1px inset; border-bottom-left-radius: 10px">

<strong>
<font size="3"><%= comment.body %></font>
  </strong> 
  <br/> 
     &nbsp;&nbsp; Posted By :  <%= comment.user.username %> &nbsp;|&nbsp; Posted <%= time_ago_in_words(comment.created_at) %> ago

<br/>


</p>

<% if user_signed_in? %>
<% if comment.user.id == current_user.id %>

<%= link_to("Edit", edit_category_post_comment_path(@post.category_id,@post,comment.id), :class => "action edit")%>|
<%= link_to "Remove", [@post.category,@post,comment], method: :delete, data: { confirm: "Are you sure?"}%>
<% end %>
<% end %>
<% end %>
